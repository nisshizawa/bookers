<body>
<p><%= notice %></p>
    <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this book from being saved
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>    
    <h1>Editing Book</h1>

    <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

        <div class="field">
            <div>Title</div>
            <%= f.text_field :title %>
        </div>
        
        <div class="field">
            <div>Body</div>
            <%= f.text_area :body %>
        </div>
        
        <div class="actions"><%= f.submit 'Update Book' %></div>
        <%= link_to 'Show' , "/books/#{@book.id}" %>
        |
        <%= link_to 'Back' , "/books" %>

    <% end %>
</body>
